  "version": "2.0.0",
  "tasks": [
    {
      "label": "dot",
      "type": "shell",
      "command": "dot",
      "args": [
        "-Tpng",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.png",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        // "reveal": "always",
        // "panel": "new"
      }
    }
  ]
}
